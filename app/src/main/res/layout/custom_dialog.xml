<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="260dp"
    android:background="@drawable/curve_shap"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingStart="40dp"
        android:text="@string/list_of_commands"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="185dp"
        android:layout_gravity="center"
        android:background="#faffdd"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingStart="50dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#FAFFDD"
            android:paddingStart="60dp"
            android:text="- Cerrar aplicación/Detener aplicación."
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#FAFFDD"
            android:paddingStart="60dp"
            android:text="- Borrar texto / Borrar última palabra."
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#FAFFDD"
            android:paddingStart="60dp"
            android:text="- Repetir texto."
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#FAFFDD"
            android:paddingStart="60dp"
            android:text="- Lista de comandos."
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#FAFFDD"
            android:paddingStart="60dp"
            android:text="- Posición geográfica."
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#FAFFDD"
            android:paddingStart="60dp"
            android:text="- Detener posicones geográficas."
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#FAFFDD"
            android:paddingStart="60dp"
            android:text="- Parar de escuchar."
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>